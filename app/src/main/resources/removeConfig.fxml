<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.Scene?>

<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MyEde.PopupController">
    <AnchorPane>
        <VBox prefWidth="600.0" prefHeight="175.0" spacing="10">
            <padding>
                <Insets top="15.0" bottom="5.0" left="20.0" right="20.0"/>
            </padding>
            <children>
                <Label text="Remove Configuration">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Label>

                <AnchorPane prefHeight="34.0">
                    <children>
                        <Label layoutX="10.0" layoutY="8.0" text="File Location"/>
                        <TextField fx:id="configFilePathForDelete" layoutX="160.0" layoutY="4.0" prefWidth="320.0" prefHeight="25.0" promptText="C:/User/"/>
                        <Button fx:id="configFilePathDeleteButton" layoutX="495.0" layoutY="4.0" text="Browse" onAction="#onExploreButtonClicked"/>
                    </children>
                </AnchorPane>

                <AnchorPane prefHeight="40.0">
                    <children>
                        <Button fx:id="deleteButton" layoutX="450.0" layoutY="5.0" prefWidth="110.0" prefHeight="30.0" text="Remove" onAction="#onDeleteButtonClicked"/>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </AnchorPane>
</Scene>
